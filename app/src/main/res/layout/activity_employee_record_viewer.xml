<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="EMPLOYEE CODE"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/black_lite"/>
            <TextView
                android:id="@+id/emp_code_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1324"
                android:gravity="end"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/black_lite"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/clockin_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOCK IN"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlueDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GEO LOCATION"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GEO COORDINATES"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/chck_in_geo_loc_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HYDERABAD"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:id="@+id/chck_in_geo_code_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12.999999, 91.177777"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/chck_in_date_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="20-11-2022"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:id="@+id/chck_in_time_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="13:50:00"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="CLOCK IN CAPTURED IMAGE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/clockin_display_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:background="@drawable/bg_type_1"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/clockout_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLOCK OUT"
                android:layout_margin="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlueDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GEO LOCATION"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="GEO COORDINATES"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/chck_out_geo_loc_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HYDERABAD"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:id="@+id/chck_out_geo_code_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12.999999, 91.177777"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/chck_out_date_txt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="20-11-2022"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black_lite"/>

                <TextView
                    android:id="@+id/chck_out_time_txt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="13:50:00"
                    android:textColor="@color/black_lite"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="CLOCK OUT CAPTURED IMAGE"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="end"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_lite"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/clockout_display_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:background="@drawable/bg_type_1"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>