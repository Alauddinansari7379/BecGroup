<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/edittxt_bg_type1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittxt_bg_type1"
                android:text="Geo Location"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorBlueDark"
                android:padding="15dp" />
            <TextView
                android:id="@+id/geo_loc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittxt_bg_type1"
                android:text="Geo Location : UNKNOWN"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black_lite"
                android:padding="15dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/username_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittxt_bg_type1"
            android:text="Username : UNKNOWN"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black_lite"
            android:padding="15dp" />
        <TextView
            android:id="@+id/emp_code_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittxt_bg_type1"
            android:text="Employee Code : UNKNOWN"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black_lite"
            android:padding="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clockin_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Clock in"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:background="@drawable/btn_type_2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clockout_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Clock out"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:background="@drawable/btn_type_2"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorBlueDark"/>
        </LinearLayout>
        <TextView
            android:id="@+id/check_display_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clock IN Time Information"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/black_lite"
            android:textSize="17sp"
            android:layout_margin="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/edittxt_bg_type1">

            <TextView
                android:id="@+id/geo_loc_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Date : UNKNOWN"
                android:textStyle="bold"
                android:padding="15dp" />
            <TextView
                android:id="@+id/geo_loc_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="Clock Time : UNKNOWN"
                android:padding="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAPTURE PHOTO"
                android:textStyle="bold"
                android:textColor="@color/black_lite"
                android:textSize="17sp"
                android:layout_margin="20dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/capture_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:drawablePadding="5dp"
            android:textSize="17sp"
            android:drawableEnd="@drawable/camara"
            android:background="@drawable/bg_type_1"
            android:padding="10dp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/display_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/snapshot"
            android:background="@drawable/btn_type_5"
            android:padding="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Information"
            android:textStyle="normal"
            android:visibility="gone"
            android:textColor="@color/black_lite"
            android:textSize="17sp"
            android:layout_margin="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:padding="10dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittxt_bg_type1">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/user"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Employee Code : 0852"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittxt_bg_type1"
                    android:padding="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Note : Ipsum is simple dummy text of the printing"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittxt_bg_type1"
                    android:padding="15dp" />
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/btn_type_1"
            android:backgroundTint="@color/colorBlueDark"
            android:padding="15dp"
            android:text="View Unsynced Data"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>