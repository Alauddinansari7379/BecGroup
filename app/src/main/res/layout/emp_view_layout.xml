<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/colorAccent">
    <LinearLayout
        android:id="@+id/click_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBlueDark"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/clck_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="CLOCK IN"
                android:textSize="17sp"
                android:gravity="start"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="GEO LOCATION"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black_lite"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textSize="15sp"
                android:gravity="end"
                android:textStyle="bold"
                android:textColor="@color/black_lite"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/clockin_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="10dp">
            <TextView
                android:id="@+id/chck_in_geo_loc_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="HYDERABAD"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/black_lite"/>
            <TextView
                android:id="@+id/chck_in_date_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20-11-2022"
                android:textSize="15sp"
                android:gravity="end"
                android:textStyle="normal"
                android:textColor="@color/black_lite"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/clockout_values"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:visibility="visible"
                android:id="@+id/chck_out_geo_loc_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="HYDERABAD"
                android:gravity="start"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/black_lite"/>

            <TextView
                android:visibility="visible"
                android:id="@+id/chck_out_date_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20-11-2022"
                android:gravity="end"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/black_lite"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>